<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.raut.swapnil.resume_builder.Skills_Awards">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Professional Skills"
                android:textColor="#000000"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/skill_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Skill"
                    android:maxLines="1"
                    android:singleLine="true"/>

                <ImageView
                    android:id="@+id/add_skill_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add_circle_black_24dp"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/skill_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:hint="Enter Skill"
                        android:maxLines="1"
                        android:singleLine="true"/>

                    <ImageView
                        android:id="@+id/skill_clear_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/ic_clear_black_24dp"
                        android:visibility="gone" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/add_skill_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add_circle_black_24dp"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/skill_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:hint="Enter Skill"
                        android:maxLines="1"
                        android:singleLine="true"/>

                    <ImageView
                        android:id="@+id/skill_clear_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/ic_clear_black_24dp"
                        android:visibility="gone" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/add_skill_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add_circle_black_24dp"
                    android:visibility="gone" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingTop="24dp"
            android:text="Achievements/Awards"
            android:textColor="#000000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/award_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Achievement"
            android:paddingTop="24dp"
            android:maxLines="1"
            android:singleLine="true"/>

        <EditText
            android:id="@+id/award_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Achievement"
            android:paddingTop="24dp"
            android:maxLines="1"
            android:singleLine="true"/>

        <EditText
            android:id="@+id/award_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Achievement"
            android:layout_marginBottom="24dp"
            android:paddingTop="16dp"
            android:maxLines="1"
            android:singleLine="true"/>

        <Button
            android:id="@+id/next_skill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="submit"
            android:visibility="visible" />

    </LinearLayout>
</ScrollView>